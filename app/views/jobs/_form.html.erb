<%= semantic_form_for @job do |f| %>
  <%= f.inputs do%>
    <%= f.input :title,  :input_html => { :size => 30} %>
    <%= f.input :description, :as => :text, :input_html => { :rows => 10, :cols => 50, :maxlength => 500  } %>
    <%= f.input :category, :as => :select, :collection => Category.find(:all) %>
    <%= f.input :new_category, :label => 'Alternatively add a category',  :input_html => { :size => 10} %>
    <div id = "new_category"></div>
    <%= f.input :experience, :as => :select,   :collection => ["0-1", "1-2", "2-3", "3-5", "5+"] %>
    <%= f.input :deadline, :as => :string ,  :input_html => { :size => 20} %>

    <% end %>
    <%=f.buttons %>
    <%= f.semantic_errors :alert%>
    <% end %>