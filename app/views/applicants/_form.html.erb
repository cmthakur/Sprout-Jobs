<%= semantic_form_for ([@job,@applicant]) do |f| %>
  <%= f.inputs do%>

    <%= f.input :name %>
    <%= f.input :dob %>
    <%= f.input :email, :as => :email %>
    <%= f.input :phone %>
    <%= f.input :education, :as => :select, :collection => ["SLC", "Intermediate", "Bachelors", "Masters", "N/A"] %>
    <%= f.input :experience, :as => :select,   :collection => ["0-1", "1-2", "2-3", "3-5", "5+"] %>
    <%= f.input :why_sprout, :as => :text %>
    <%= f.input :why_you, :as => :text %>
    <%=f.buttons %>
    <%= f.semantic_errors :alert%>
  <% end %>
<% end %>